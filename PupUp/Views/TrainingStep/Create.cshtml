@model PupUp.Models.Trainings.TrainingStep

@{
    ViewData["Title"] = "Edit";
    var trainingId = ViewData["TrainingId"];
}
@section Styles {
<link rel="stylesheet" href="~/css/site_editor.css" />
}
<div class="editor col-12 col-sm-6 col-md-4">
    <h1>Create</h1>

    <h4>Training</h4>
    <hr />
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" id="trainingId" name="trainingId" value="@trainingId" />
        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="ImageFile" accept="image/png,image/jpeg,image/jpg,image/gif,image/svg" />
            <span asp-validation-for="ImageFile" class="text-danger"></span>
        </div>
        <div class="form-group editor-line">
            <a asp-action="Index">Back to List</a>
            <input type="submit" value="Create" class="btn" style="color: var(--green); font-weight: bold;" />
        </div>
    </form>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
