@model PupUp.Models.Dogs.DogTrainingState
@using PupUp.Models.Trainings.Enums
@{
    ViewData["Title"] = "Home Page";
    var steps = ViewData["Steps"] as IEnumerable<PupUp.Models.Trainings.TrainingStep>;
    var dogId = ViewData["Dog"];
    var trainingId = ViewData["Training"];
}
@section Styles {
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
<link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/Swiper/4.3.5/css/swiper.min.css'>
<link rel="stylesheet" href="~/css/site_training.css" />
}
<div class="wrapper">
    <div class="step-slider">
        <div class="step-slider__wrp swiper-wrapper">
            @{
                foreach (var stepModel in steps)
                {
                    <div class="col-12 col-sm-6 col-lg-4 step-slider__item swiper-slide">
                        <a href="#" class="step__item">
                            <div class="step-date">
                                <span class="step-date__title">@stepModel.Index</span>
                                <span class="step-date__txt">Step</span>
                            </div>
                            <div class="step__title">
                                Lorem Ipsum Dolor Sit Amed
                            </div>

                            <p class="step__txt">
                                @stepModel.Description;
                            </p>

                            <div class="step__img">
                                <img src="@("~/images/steps/" + stepModel.ImageUrl)" c alt="step" />
                            </div>
                        </a>
                    </div>
                }
            }

            <div class="col-12 col-sm-6 col-lg-4 step-slider__item swiper-slide">
                <div class="step__item">
                    <div class="step-date">
                        <span class="step-date__title">How much did you learn?</span>
                    </div>
                    <div class="step__title">
                        Lorem Ipsum Dolor Sit Amed
                    </div>


                    <div class="step__txt">
                        <form asp-action="Training" method="post">
                            <input asp-for="DogId" type="hidden" id="dogId" value="@dogId" />
                            <input asp-for="TrainingId" type="hidden" id="trainingId" value="@trainingId" />
                            <div class="form-group">
                                <select asp-for="State" asp-items="Html.GetEnumSelectList<TrainingState>()" class="form-control">
                                <option selected="selected" value="">Please select</option>
                            </select>
                            </div>
                            <input type="submit" value="Save" class="btn" style="color: var(--green); font-weight: bold;" />
                        </form>

                    </div>

                </div>
            </div>
        </div>

        <div class="step-slider__ctr">

            <div class="step-slider__arrows">
                <button class="step-slider__arrow step-slider-prev">
                    <span class="icon-font">
                        <svg class="icon-step icon-arrow-left"><use xlink:href="#icon-arrow-left"></use></svg>
                    </span>
                </button>
                <button class="step-slider__arrow step-slider-next">
                    <span class="icon-font">
                        <svg class="icon-step icon-arrow-right"><use xlink:href="#icon-arrow-right"></use></svg>
                    </span>
                </button>
            </div>

            <div class="step-slider__pagination"></div>

        </div>

    </div>
</div>

<svg hidden="hidden">
    <defs>
        <symbol id="icon-arrow-left" viewBox="0 0 32 32">
            <title>arrow-left</title>
            <path d="M0.704 17.696l9.856 9.856c0.896 0.896 2.432 0.896 3.328 0s0.896-2.432 0-3.328l-5.792-5.856h21.568c1.312 0 2.368-1.056 2.368-2.368s-1.056-2.368-2.368-2.368h-21.568l5.824-5.824c0.896-0.896 0.896-2.432 0-3.328-0.48-0.48-1.088-0.704-1.696-0.704s-1.216 0.224-1.696 0.704l-9.824 9.824c-0.448 0.448-0.704 1.056-0.704 1.696s0.224 1.248 0.704 1.696z"></path>
        </symbol>
        <symbol id="icon-arrow-right" viewBox="0 0 32 32">
            <title>arrow-right</title>
            <path d="M31.296 14.336l-9.888-9.888c-0.896-0.896-2.432-0.896-3.328 0s-0.896 2.432 0 3.328l5.824 5.856h-21.536c-1.312 0-2.368 1.056-2.368 2.368s1.056 2.368 2.368 2.368h21.568l-5.856 5.824c-0.896 0.896-0.896 2.432 0 3.328 0.48 0.48 1.088 0.704 1.696 0.704s1.216-0.224 1.696-0.704l9.824-9.824c0.448-0.448 0.704-1.056 0.704-1.696s-0.224-1.248-0.704-1.664z"></path>
        </symbol>
    </defs>
</svg>

@section Scripts {
<script src='https://cdnjs.cloudflare.com/ajax/libs/Swiper/4.3.5/js/swiper.min.js'></script>
<script src='~/js/site_training.js'></script>
}
