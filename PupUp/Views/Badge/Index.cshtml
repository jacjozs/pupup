@model IEnumerable<PupUp.Models.Badges.Badge>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css" />
<link rel="stylesheet" href="~/css/site_trainings.css" />
}
<div id="demo" class="col-12">
    <div class="d-flex justify-content-center align-items-center">
        <h1>Badgets</h1>
        <a asp-action="Create" style="font-size: xx-large; margin-left: 5px;">
            <i class="fa-solid fa-plus"></i>
        </a>
    </div>
    <!-- Responsive table starts here -->
    <!-- For correct display on small screens you must add 'data-title' to each 'td' in your table -->
    <div class="table-responsive-vertical">
        <!-- Table starts here -->
        <table id="table" class="table table-hover table-mc-light-blue">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var badget in Model)
                    {
                        <tr>
                            <td data-title="Id">@badget.Id</td>
                            <td data-title="Name">@badget.Name</td>
                            <td data-title="Description">@badget.Description</td>
                            <td data-title="Action">
                                <a asp-action="Edit" asp-route-id="@badget.Id">Edit</a> | 
                                <a asp-action="Delete" asp-route-id="@badget.Id">Delete</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
@section Scripts {

<script src='https://cdn.datatables.net/1.10.12/js/jquery.dataTables.min.js'></script>
<script src='https://cdn.datatables.net/1.10.12/js/dataTables.bootstrap.min.js'></script>
<script src='~/js/site_trainings.js'></script>
}